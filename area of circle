#include <stdio.h>
int main() {
    float radius, circumference, area;
    printf("Enter the radius of the circle:\t");
    scanf("%f", &radius);
    circumference = 2 * 3.14 * radius; 
    area = 3.14 * radius * radius; 
    printf("Circumference of the circle is %6.2f\n", circumference);
    printf("Area of the circle is %6.2f\n", area);
    return 0;
}